<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main2"
    tools:context="io.github.acien101.diedricoanimation.Main2Activity"
    android:id="@+id/content_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layoutForSurfaceView"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/buttonsLayout"
        android:visibility="invisible">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/leftButton"
            android:src="@drawable/ic_action_arrow_left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center"
            android:layout_weight="1"
            android:id="@+id/infoText"
            android:text="Hooolaaa"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/rightButton"
            android:src="@drawable/ic_action_arrow_right"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/layoutForProjections"
            android:layout_weight="9"
            android:background="#000000">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:id="@+id/projectionLayout">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/projection"
                    android:background="#ffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cota"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="200dp"
                    android:id="@+id/cotaText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Alejamiento"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="300dp"
                    android:id="@+id/alejamientoText"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_info"
                    android:layout_alignParentRight="true"
                    android:id="@+id/infoButton"/>

            </RelativeLayout>


            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:id="@+id/textInfoProjection"
                android:visibility="gone"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"></LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
